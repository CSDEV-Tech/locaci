{
    "$schema": "https://turborepo.org/schema.json",
    "pipeline": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**", ".next/**", "storybook-static/**"]
        },
        "build-storybook": {
            "outputs": ["storybook-static/**"]
        },
        "test": {
            "outputs": [],
            "inputs": ["src/**/*.ts", "test/**/*.ts"]
        },
        "dev": {
            "cache": false
        },
        "storybook": {
            "cache": false
        },
        "lint": {
            "outputs": []
        },
        "deploy": {
            "dependsOn": ["test", "build"],
            "outputs": []
        }
    }
}
